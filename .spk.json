{
  "version": "1.0",
  "swiftVersion": "6.2",
  "project": {
    "version": "4.0.0"
  },
  "platforms": {
    "macOS": "15.0"
  },
  "hooks": {
    "fixMode": "safe",
    "restageFixed": true,
    "failFast": false,
    "preCommit": {
      "enabled": true,
      "scope": "staged",
      "parallel": false,
      "tasks": ["format", "versionSync", "build", "test"]
    },
    "prePush": {
      "enabled": true,
      "scope": "changed",
      "baseBranch": "main",
      "parallel": true,
      "tasks": ["test", "unused", "duplicates"]
    },
    "ci": {
      "enabled": true,
      "scope": "all",
      "parallel": true,
      "tasks": ["format:check", "versionSync:check", "build", "test", "unused", "duplicates"]
    },
    "tasks": {
      "format": {
        "enabled": true,
        "blocking": true,
        "paths": ["Sources/", "Tests/"],
        "excludePaths": []
      },
      "versionSync": {
        "enabled": true,
        "blocking": true,
        "options": {
          "syncTargets": [
            {
              "file": "Sources/ClassDumpCLI/main.swift",
              "pattern": "version: \"(\\d+\\.\\d+\\.\\d+) \\(Swift\\)\""
            },
            {
              "file": "Sources/DeprotectCLI/main.swift",
              "pattern": "deprotect (\\d+\\.\\d+\\.\\d+) \\(Swift\\)" 
            },
            {
              "file": "Sources/FormatTypeCLI/main.swift",
              "pattern": "formatType (\\d+\\.\\d+\\.\\d+) \\(Swift\\)"
            },
            {
              "file": "README.md",
              "pattern": "from: \"(\\d+\\.\\d+\\.\\d+)\""
            }
          ]
        }
      },
      "build": {
        "enabled": true,
        "blocking": true
      },
      "test": {
        "enabled": true,
        "blocking": true,
        "options": {
          "parallel": true
        }
      },
      "unused": {
        "enabled": true,
        "blocking": false,
        "paths": ["Sources/"],
        "excludePaths": [],
        "options": {
          "mode": "reachability",
          "sensibleDefaults": true
        }
      },
      "duplicates": {
        "enabled": true,
        "blocking": false,
        "paths": ["Sources/"],
        "options": {
          "minTokens": 50
        }
      }
    }
  },
  "swiftformat": {
    "enabled": true,
    "configPath": ".swift-format"
  },
  "workflows": {
    "ci": true,
    "release": true,
    "docs": true
  }
}
